{
    "name": "Daily Tee Reminder",
    "version": "2.0.0",
    "description": "Daily Tee Reminder will let you know when there is new t-shirts available on various t-shirt websites",
    "icons": 
    {     
        "16": "assets/tshirt.png",
        "32": "assets/tshirt.png",
        "48": "assets/tshirt.png",
        "128": "assets/tshirt.png"
    },  
    "background": 
    { 
        "page" : "background.html" 
    },
    "browser_action": 
    {
        "default_icon": "assets/tshirt.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self'; object-src 'self'"
}